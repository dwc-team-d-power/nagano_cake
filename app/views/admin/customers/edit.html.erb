<div class="container">
  <h1>会員情報編集</h1>
    <h3>会員ID  <%= @admins_customer.id %></h3>
      <%= form_for @admins_customer, :url => { :controller => :users, :action => :update } do |f| %>
        <% if @admins_customer.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h3><%= @admins_customer.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @admins_customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h3>氏名           <%= f.text_field :last_name %>  <%= f.text_field :first_name %></h3>
        <h3>フリガナ        <%= f.text_field :last_name %>  <%= f.text_field :first_name %></h3>
        <h3>郵便番号        <%= f.text_field :postal_code %></h3>
        <h3>住所            <%= f.text_field :user_address %></h3>
        <h3>電話番号        <%= f.number_field :telephone_number %></h3>
        <h3>メールアドレス   <%= f.text_field :email %></h3>
        <h3>会員ステータス
          <% if @admins_customer.deleted_at.nil? %>
            <%= link_to "退会", admins_customer_path, method: :delete, data:  { confirm: '本当に退会させますか？' }, class: "btn btn-danger" %>
          <% else %>
            <%= link_to "有効", user_restore_admins_customer_path(@admins_customer), method: :patch, class: "btn btn-primary" %>
          <% end %>
          <%= f.submit '変更を保存', class: "btn btn-primary" %>
        </h3>
      <% end %>
</div>
