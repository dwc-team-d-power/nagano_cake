<div class="container">
  <h1>会員一覧</h1>
     <table class="table">
        <thead>
          <tr>
            <th>顧客ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <% @admins_cutomers.each do |p| %>
             <tr>
              <td><%= p.id %></td>
              <td><%= link_to p.last_name, admins_customer_path(p.id)  %><%= link_to p.first_name, admins_customer_path(p.id)  %></td>
              <td><%= p.email  %></td>
                <% if p.deleted_at.nil? %>
                 <td>有効</td>
                <% else %>
                 <td>退会</td>
                <% end %>
             </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>