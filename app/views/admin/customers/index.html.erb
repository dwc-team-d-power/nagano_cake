<div class="container">
   <div class='row'>
  <h1>会員一覧</h1>
      <div class = "col-md-8 offset-md-1">
        <table class="table table-lg user-index">
        <thead>
          <tr>
            <th>顧客ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <% @admins_customers.each do |customer| %>
             <tr>
              <td><%= customer.id %></td>
              <td><%= link_to last_name, admin_customer_path(customer.id)  %><%= link_to first_name, admin_customer_path(customer.id)  %></td>
              <td><%= customer.email  %></td>
                <% if customer.deleted_at.nil? %>
                 <td>有効</td>
                <% else %>
                 <td>退会</td>
                <% end %>
             </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>
