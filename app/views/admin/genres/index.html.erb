<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">ジャンル一覧・追加</span>
    </h5>
  </div>
  <div class="row">
    <div class="col-4 my-4 form-group">
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <div class="form-inline">
          <p class="mx-3 my-1">ジャンル名</p>
          <%= f.text_field :name, class: "form-control mx-2", placeholder: "ジャンル名", size: 20 %>
          <%= f.submit '新規登録', class:'btn btn-success mx-2' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col-8"><span class="ml-5">ジャンル</span></th>
            <th class="col-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
