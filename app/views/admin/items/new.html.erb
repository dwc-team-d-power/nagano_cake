<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @item, url: admin_items_path, local: true, html: { multipart: true } do |f| %>
        <div class="form-group row">
          <label for="item_image" class="col-sm-2 col-form-label">商品画像</label>
          <div class="col-sm-10">
            <%= f.file_field :image, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="item_name" class="col-sm-2 col-form-label">商品名</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="item_introduction" class="col-sm-2 col-form-label">商品説明</label>
          <div class="col-sm-10">
            <%= f.text_area :introduction, class: "form-control", size: "50x5", placeholder: "ここに説明文を記述します" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="item_genre_id" class="col-sm-2 col-form-label">ジャンル</label>
          <div class="col-sm-10">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="item_price" class="col-sm-2 col-form-label">税抜価格</label>
          <div class="col-sm-10">
            <div class="input-group">
              <%= f.text_field :price, class: "form-control", placeholder: "1000" %>
              <div class="input-group-append">
                <span class="input-group-text">円</span>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="item_is_active" class="col-sm-2 col-form-label">販売ステータス</label>
          <div class="col-sm-10">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, true, class: "form-check-input" %>
              <%= f.label :is_active, "販売中", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, false, class: "form-check-input" %>
              <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12 text-center">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
