<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @item, local: true, html: { multipart: true } do |f| %>
        <table class="table">
          <tr>
            <th><%= f.label :image, "商品画像" %></th>
            <td><%= f.file_field :image %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "商品名" %></th>
            <td><%= f.text_field :name, placeholder: "商品名" %></td>
          </tr>
          <tr>
            <th><%= f.label :description, "商品説明" %></th>
            <td><%= f.text_area :description, size: "50x5", placeholder: "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %></td>
          </tr>
          <tr>
            <th><%= f.label :price_excluding_tax, "税抜価格" %></th>
            <td><%= f.text_field :price_excluding_tax, placeholder: "1000" %>円</td>
          </tr>
          <tr>
            <th><%= f.label :sales_status, "販売ステータス" %></th>
            <td>
              <%= f.radio_button :sales_status, true %>
              <%= f.label :sales_status, "販売中" %>
              <%= f.radio_button :sales_status, false %>
              <%= f.label :sales_status, "販売停止中" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
