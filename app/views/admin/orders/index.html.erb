<div class="container">
 <div class='row'>
  <h4><p><span class="p-0.5 bg-secondary"> 注文履歴一覧</span></p></h4>
     <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>入金ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |p| %>
           <tr>
            <td><%= link_to customer.purchase_date.strftime("%Y-%m-%d %H:%M"), admins_order_path(customer.id), data: {"turbolinks" => false}  %></td>
            <td><%= customer.last_name %><%= customer.first_name %></td>
            <td><%= customer.email  %></td>
            <td><%= customer.order_status_i18n  %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <%= paginate @orders, class: "paginate" %>
</div>
