<div class="container">
 <div class='row'>
  <h4><p><span class="p-0.5 bg-secondary"> 注文履歴一覧</span></p></h4>
     <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>入金ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
           <tr>
             <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order.id), data: {"turbolinks" => false}  %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.customer.email  %></td>
            <td><%= order.status  %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <%= paginate @orders %>
</div>
