<div class="col-5">
  <p>ようこそ、<%= customer.last_name %>さん！</p>
</div>
<div class="col-7">
  <div class="row">
    <% if customer_signed_in? %>
      <li><%= link_to 'マイページ', admin_items_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to '商品一覧', admin_customers_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to 'カート', admin_root_path, class: 'btn btn-outline-secondary'%></li>
      <li><%= link_to 'ログアウト', root_path, class: 'btn btn-outline-secondary'%></li>
    <% else %>
      <li><%= link_to 'about', about_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to '商品一覧', items_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-outline-secondary'%></li>
    <% end %>
  </div>
  <div class="row">
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</div>