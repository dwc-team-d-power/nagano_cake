<header class="sticky-top border-bottom">
  <nav class="">
    <div class="container-fluid">
      <div class="row">
        <div class="col-3 pl-4">
          <a class="navbar-brand" href="/"><%= image_tag('nagano_cake.jpg', size: "75x75") %></a>
          <a class="navbar-brand" href="/">Nagano Cake</a>
        </div>
        <div class="col-3">
          <% if customer_signed_in? %>
            <p class="mt-4">ようこそ、<%= current_customer.last_name %>さん！</p>
          <% end %>
        </div>
        <div class="col-6">
          <div class="row justify-content-end mr-1">
            <ul class="nav">
              <% if admin_signed_in? %>
                <%= render 'layouts/admin_header' %>
              <% elsif customer_signed_in? %>
                <%= render 'layouts/customer_header' %>
              <% else %>
                <%= render 'layouts/before_signin_header' %>
              <% end %>
            </ul>
          </div>
          <div class="row justify-content-end mr-1 mt-1">
            <%= form_with url: search_path, method: :get do |f| %>
              <%= f.text_field :word, placeholder: "Search" %>
              <%= f.submit "Search", class: "btn btn-outline-success btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

