<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">配送先登録/一覧</span>
    </h5>
  </div>

  <div class="row">
    <div class="col-8 my-4">
      <form>
        <div class="form-group row">
          <label for="text3a" class="col-3 col-form-label">郵便番号(ハイフンなし)</label>
          <div class="col-4">
            <input id="text3a" class="form-control" type="postal_code" placeholder="0000000">
          </div>
        </div>
        <div class="form-group row">
          <label for="text3b" class="col-3 col-form-label">住所</label>
          <div class="col-8">
            <input id="text3b" class="form-control" type="address" placeholder="東京都渋谷区代々木神園町0-0">
          </div>
        </div>
        <div class="form-group row">
          <label for="text3b" class="col-3 col-form-label">宛名</label>
          <div class="col-4">
            <input id="text3b" class="form-control" type="name" placeholder="令和道子">
          </div>
          <button type="submit" class="btn btn-success ml-auto">新規登録</button>
        </div>
      </form>
    </div>
  </div>
  
  
  <div class="row mt-5">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr class="row">
            <th class="col-2">郵便番号</th>
            <th class="col-5">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address), class:'btn btn-success' %>
                <%= link_to "編集する", address_path(address),method: :delete, class:'btn btn-danger', "data-confirm" => "本当に消去しますか?" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
