<h1>ショッピングカート</h1> 
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: cart_item, local: true, method: :patch do |f| %>
            <%= f.select :amount, options_for_select(1..5, cart_item.amount), {}, class: "form-control" %>
            <%= f.submit "更新", class: "btn btn-primary mt-2" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td>
          <%= link_to "削除", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-between mt-4">
  <%= link_to "買い物を続ける", items_path, class: "btn btn-secondary" %>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-primary" %>
</div>

<h3 class="mt-4">合計金額: <%= @cart_items.sum(&:subtotal) %>円</h3>
