<h1 class="text-center mt-4">マイページ</h1>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>登録情報</h3>
    <%= link_to "編集する", edit_customer_information_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>氏名</th>
        <td><%= @customer.first_name + @customer.last_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <h3>配送先</h3>
    <%= link_to "一覧を見る", "#", class: "btn btn-info" %>
  </div>

  <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <h3>注文履歴</h3>
    <%= link_to "一覧を見る", "#", class: "btn btn-info" %>
  </div>
</div>