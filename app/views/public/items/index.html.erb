<h1>商品一覧</h1>
<p>(全<%= @items.count %>件)</p>

<div class="genres">
  <%= render 'genre', genres: @genres %>
</div>

<div class="items">
  <% @items.each do |item| %>
    <div class="item">
      <% if item.image.attached? %>
        <%= image_tag item.image, size: "150x150" %>
      <% else %>
        <%= image_tag "no_image.jpeg", size: "150x150" %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= item.with_tax_price %>円</p>
    </div>
  <% end %>
</div>

<%= link_to "全ての商品", items_path %>