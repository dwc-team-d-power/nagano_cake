<h1>商品一覧</h1><p>(全<%= @items.count %>件)</p></h1>

<div class="row mb-4">
  <div class="col-3">
    <%= render 'genre', genres: @genres %>
  </div>
  <div class="col-9">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "card-img-top", size: "150x150" %>
            <% else %>
              <%= image_tag "no_image.jpeg", class: "card-img-top", size: "150x150" %>
            <% end %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= link_to item.name,item_path(item) %></h5>
              <p class="card-text"><%= number_to_currency(item.with_tax_price, unit: "￥", precision: 0) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>