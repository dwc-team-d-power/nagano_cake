<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">注文情報確認</span>
    </h5>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-6">商品名</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-2">数量</th>
            <th class="col-2">小計</th>
          </tr>
        </thead>
      <!--order.currrent_customer.id    cart_item.customer.id == currrent_customer.id-->
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to(cart_item) do %>
                <%= image_tag cart_item.get_profile_image, size:'20x20' %>
                <% end %>
                <%= cart_item.item_id.name %>
              </td>
              <td><%= cart_item.item_id.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tr>
          <td class="table-active">送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class="table-active">商品合計</td>
          <td> subtotal.all </td>
        </tr>
        <tr>
          <td class="table-active">請求金額</td>
          <td>上二つ合計</td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-1">
      <h5>支払方法</h5>
    </div>
    <div class="col-7">
      <%= @order.payment_method %>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      <h5>お届け先</h5>
    </div>
    <div class="col-7">
      〒 <%= @order.postal_code + @order.address %><br>
      <%= @order.name %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "注文を確定する", orders_path(@order), method: :post, class:'btn btn-success' %>
  </div>
</div>

