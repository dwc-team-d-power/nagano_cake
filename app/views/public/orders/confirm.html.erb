
<h1>注文確認</h1>

<div class="form-group">
  <p><strong>支払い方法:</strong> <%= @order.payment_method == 'credit_card' ? 'クレジットカード' : '銀行振込' %></p>
</div>

<h3>お届け先</h3>
<div class="form-group">
  <p><strong>宛名:</strong> <%= @order.name %></p>
  <p><strong>住所:</strong> <%= @order.address %></p>
  <p><strong>郵便番号:</strong> <%= @order.postal_code %></p>
</div>

<h3>商品情報</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% current_customer.cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= number_to_currency(cart_item.item.with_tax_price, unit: "￥", precision: 0) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= number_to_currency(cart_item.subtotal, unit: "￥", precision: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% subtotal = current_customer.cart_items.sum(&:subtotal) %>
<% shipping_cost = @order.shipping_cost || 0 %>
<% total_payment = subtotal + shipping_cost %>

<p><strong>商品合計:</strong> <%= number_to_currency(subtotal, unit: "￥", precision: 0) %></p>
<p><strong>送料:</strong> <%= number_to_currency(shipping_cost, unit: "￥", precision: 0) %></p>
<p><strong>合計金額:</strong> <%= number_to_currency(total_payment, unit: "￥", precision: 0) %></p>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :name %>
  <%= f.submit "注文を確定する", class: "btn btn-primary" %>
<% end %>

<%= link_to '注文情報入力に戻る', new_order_path, class: 'btn btn-secondary' %>

