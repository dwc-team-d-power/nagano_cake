<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">注文情報確認</span>
    </h5>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
      
        <tbody>order.currrent_customer.id    cart_item.currrent_customer.id
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to(cart_item) do %>
                <%= image_tag cart_item.get_profile_image, size:'20x20' %>
                <% end %>
                <%= cart_item.item_id.name %>
              </td>
              <td><%= cart_item.item_id.name %>></td>税込
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.小計 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 offset-1">
      
    </div>
  </div>
</div>