<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">注文情報確認</span>
    </h5>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-6">商品名</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-2">数量</th>
            <th class="col-2">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to(cart_item) do %>
                <%= image_tag cart_item.item.get_profile_image, size:'20x20' %>
                <% end %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tr>
          <td class="table-active">送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class="table-active">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-active">請求金額</td>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      <h5>支払方法</h5>
    </div>
    <div class="col-7">
      <%= @order.payment_method_i18n %>
      <!--%= I18n.t("enums.order.payment_method.#{@order.payment_method}") %>階層全部書く表記-->
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      <h5>お届け先</h5>
    </div>
    <div class="col-7">
      〒 <%= @order.postal_code + @order.address %><br>
      <%= @order.name %>
    </div>
  </div>
  <div class="text-center">
    <%= form_with model: @order, url: orders_path(@order) do |f| %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address%>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :shipping_cost, value: 800 %>
      <%= f.hidden_field :total_payment, value: @order.total_payment%>
      <%= f.submit "注文を確定する", class:'btn btn-success' %>
    <% end %>
  </div>
</div>

