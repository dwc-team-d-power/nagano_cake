<h1>注文履歴一覧</h1>
<table>
<% @orders.each do |order|%>
<tr>注文日</tr>
<td><%=order.created_at%></td>
<tr>配送先</tr>
<td><%= order.full_addresses%></td>
<tr>注文商品</tr>
<td><%= order.order_detail.item.name%></td>
<tr>支払金額</tr>
<td><%=order.total_payment%></td>
<tr>ステータス</tr>
<td><%= order.status%></td>
<tr>注文詳細</tr>
<td><%= link_to order_path %></td>
</table>    
<% end %>