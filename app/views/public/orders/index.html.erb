<h1>注文履歴一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
        <td><%= order.full_address %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %> x <%= order_detail.amount %><br>
          <% end %>
        </td>
        <td><%= number_to_currency(order.total_payment, unit: "￥", precision: 0) %></td>
        <td><%= order.status %></td>
        <td><%= link_to '詳細', order_path(order), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>