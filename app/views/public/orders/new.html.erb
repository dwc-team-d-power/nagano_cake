<div class="container-fluid">
  <div class="row">
    <h5 class="col-4 text-center my-4">
      <span class="px-3" style="background-color: #dcdcdc;">注文情報入力</span>
    </h5>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <%= form_with model: @order, url: confirm_orders_path do |f| %>
        <h5>支払方法</h5>
        <div class="ml-3">
          <div class="form-check">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0), class: "form-check-input" %>
            <%= f.label :payment_method, "クレジットカード", class: "form-check-label" %>
          </div>
          <div class="form-check">
            <%= f.radio_button :payment_method, Order.payment_methods.key(1), class: "form-check-input" %>
            <%= f.label :payment_method, "銀行振込", class: "form-check-label" %>
          </div>
        </div>

        <h5 class="mt-4">お届け先</h5>
        <div class="ml-3">
          <div class="form-check">
            <%= f.radio_button :shipping_address, 1, class: "form-check-input" %>
            <%= f.label :shipping_address, "ご自身の住所", class: "form-check-label" %>
            <div class="ml-3">
              〒 <%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.last_name %> <%= current_customer.first_name %>
            </div>
          </div>
          <div class="form-check">
            <%= f.radio_button :shipping_address, 2, class: "form-check-input" %>
            <%= f.label :shipping_address, "登録済住所から選択", class: "form-check-label" %>
            <div class="ml-3">
              <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display), {}, class: "form-control" %>
            </div>
          </div>
          <div class="form-check">
            <%= f.radio_button :shipping_address, 3, class: "form-check-input" %>
            <%= f.label :shipping_address, "新しいお届け先", class: "form-check-label" %>
            <div class="form-group mt-2">
              <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-3" %>
              <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control col-3" %>
            </div>
            <div class="form-group">
              <%= f.label :address, "住所", class: "col-3" %>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-6" %>
            </div>
            <div class="form-group">
              <%= f.label :name, "宛名", class: "col-3" %>
              <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-3" %>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4">
          <%= f.submit '確認画面に進む', class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
