<h1>注文情報入力</h1>
<%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :payment_method, "支払い方法" %><br>
    <div class="form-check">
      <%= f.radio_button :payment_method, :credit_card, class: "form-check-input" %>
      <%= f.label :payment_method_credit_card, "クレジットカード", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :payment_method, :transfer, class: "form-check-input" %>
      <%= f.label :payment_method_transfer, "銀行振込", class: "form-check-label" %>
    </div>
  </div>

  <h3>お届け先</h3>
  <div class="form-group">
    <div class="form-check">
      <%= f.radio_button :address_option, 'current', class: "form-check-input" %>
      <%= f.label :address, "ご自身の住所", class: "form-check-label" %>
      <%= current_customer.full_address %>
    </div>
    <div class="form-check">
      <%= f.radio_button :address_option, 'select', class: "form-check-input" %>
      <%= f.label :address, "登録先住所から選択", class: "form-check-label" %>
      <%= f.collection_select :address_id, @addresses, :id, :full_address, { prompt: "住所を選択" }, { class: "form-control" } %>
    </div>
    <div class="form-check">
      <%= f.radio_button :address_option, 'new', class: "form-check-input" %>
      <%= f.label :address, "新しいお届け先", class: "form-check-label" %>
    </div>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, class: "form-control" %>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form-control" %>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>
