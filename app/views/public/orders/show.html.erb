<h1>注文履歴詳細</h1>
<h3>注文情報</h3>
<tabel>
    <tr>注文日</tr>
    <tr>配送日</tr>
    <tr>支払方法</tr>
    <tr>ステータス</tr>
    <td><%= @order.created_at%></td>
    <td><%= @order.full_address%></td>
    <td><%= @order.payment_method%></td>
    <td><%= @order.status%></td>
</tabel>

<h3>注文内容</h3>
<tr>商品</tr>
<tr>単価（税込)</tr>
<tr>個数</tr>
<tr>小計</tr>
<td><%= @order.order_detail.item.name%></td>
<td><%= @order.order_detail.item.price%></td>
<td><%= @order.order_detail.amount%></td>
<td><%= @order.cart_items.subtotal%></td>

<h3>請求情報</h3>
<tr>商品合計</tr>
<tr>配送料</tr>
<tr>ご請求額</tr>
<td><%= @order.total_payment%></td>
<td><%= @order.shipping_cost%></td>
<td><%= @order+shipping_cost%></td>