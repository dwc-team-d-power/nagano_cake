<h2 class="text-center mt-4">新規会員登録</h2>
<div class="container mt-4">
  <%= form_with model: customer, url: customer_registration_path do |f| %>
    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :name, "名前", class: "form-label" %>
      </div>
      <div class="col-md-5">
        <%= f.label :last_name, "(姓)", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", id: "last_name" %>
      </div>
      <div class="col-md-5">
        <%= f.label :first_name, "(名)", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", id: "first_name" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :kana, "フリガナ", class: "form-label" %>
      </div>
      <div class="col-md-5">
        <%= f.label :last_name_kana, "(セイ)", class: "form-label" %>
        <%= f.text_field :last_name_kana, class: "form-control", id: "last_name_kana" %>
      </div>
      <div class="col-md-5">
        <%= f.label :first_name_kana, "(メイ)", class: "form-label" %>
        <%= f.text_field :first_name_kana, class: "form-control", id: "first_name_kana" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :address, "住所", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :telephone_number, "電話番号 (ハイフンなし)", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :password, "パスワード", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <% if @minimum_password_length %>
          <em class="form-text text-muted">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :password_confirmation, "パスワード (確認用)", class: "form-label" %>
      </div>
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 text-center">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
</div>
 

<h2 class="text-center mt-4">既に登録済みの方</h2>
<div class="text-center">
  <%= link_to "こちら", new_session_path(resource_name), class: "btn btn-link" %>からログインしてください。
</div>