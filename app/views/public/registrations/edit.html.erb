<h3 class="text-center mt-3">会員情報編集</h3>

<div class="container mt-4">
  <%= form_for(@customer, url: information_customer_path, html: { method: :patch }, class: "form-horizontal") do |f| %>
    <div class="form-group row">
      <%= f.label :last_name, "氏名", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name_kana, "フリガナ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
